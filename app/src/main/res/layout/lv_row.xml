<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E0EFFB"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dulica_denisa_lv_row_question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="intrebare"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/dulica_denisa_lv_row_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dulica_denisa_lv_row_iv"
        >
    </TextView>
    <ImageView
        android:id="@+id/dulica_denisa_lv_row_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/img_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        >
    </ImageView>

    <RadioGroup
        android:id="@+id/dulica_denisa_lv_row_rg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dulica_denisa_lv_row_iv"
        >
        <RadioButton
            android:id="@+id/dulica_denisa_rb1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="rb1"
            android:layout_margin="2dp"
            style="@style/radio_button"
            android:layout_weight="1">
        </RadioButton>

            <RadioButton
                android:id="@+id/dulica_denisa_rb2"
                android:layout_width="0dp"
                style="@style/radio_button"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:text="rb2"
                android:layout_weight="1">
            </RadioButton>

            <RadioButton
                android:id="@+id/dulica_denisa_rb3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="rb3"
                android:layout_margin="2dp"
                style="@style/radio_button"
                android:layout_weight="1"
                >
            </RadioButton>

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>