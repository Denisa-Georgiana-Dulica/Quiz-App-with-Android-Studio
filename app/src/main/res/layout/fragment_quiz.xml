<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.QuizFragment">

    <ListView
        android:id="@+id/dulica_denisa_quiz_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:dividerHeight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/dulica_denisa_see_answers_btn"
        >
    </ListView>

    <Button
        android:id="@+id/dulica_denisa_see_answers_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_quiz_see_the_correct_answers"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>