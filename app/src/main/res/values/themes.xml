<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TEMA3_DAM" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#1A276F</item>
        <!-- Customize your theme here. -->
        <item name="android:textAppearance">@style/TextStyle</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="editTextStyle">@style/TextInputET</item>
    </style>

    <style name="TextView">
        <item name="android:textViewStyle">@font/poppins_bold</item>
    </style>

    <style name="radio_button">
        <item name="buttonTint">#1329A4</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextStyle" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/poppins_light</item>
    </style>

    <style name="TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">#1329A4</item>
    </style>

    <style name="TextInputET" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="fontFamily">@font/poppins_light</item>
    </style>

    <style name="Theme.TEMA3_DAM.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TEMA3_DAM.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TEMA3_DAM.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>